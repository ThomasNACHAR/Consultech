@model Consultech.Web.Models.Clients.ClientViewModel

@{
    ViewData["Title"] = "Détails du client";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Nom de l'entreprise</dt>
        <dd class="col-sm-9">@Model.CompanyName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Adresse</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Secteur d'activité</dt>
        <dd class="col-sm-9">@Model.ActivitySector</dd>
    </dl>

    <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
</div>
