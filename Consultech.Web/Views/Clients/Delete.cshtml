@model Consultech.Web.Models.Clients.ClientViewModel

@{
    ViewData["Title"] = "Supprimer un client";
}

<div class="container mt-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>
    <hr />

    <p>Êtes-vous sûr de vouloir supprimer ce client ?</p>

    <dl class="row">
        <dt class="col-sm-3">Nom</dt>
        <dd class="col-sm-9">@Model.CompanyName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Adresse</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Secteur</dt>
        <dd class="col-sm-9">@Model.ActivitySector</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Annuler</a>
    </form>
</div>
